<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.g4bootcamp.nurseassistant.Account">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TVnamesurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Name Surname"
            android:textColor="@color/common_plus_signin_btn_text_light_focused"
            android:textSize="24sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/nurse"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <Button
            android:id="@+id/btn_sign_out"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="330dp"
            android:layout_weight="1"
            android:background="@color/blue700"
            android:shadowColor="@android:color/holo_blue_light"
            android:text="@string/signout"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>
</FrameLayout>
